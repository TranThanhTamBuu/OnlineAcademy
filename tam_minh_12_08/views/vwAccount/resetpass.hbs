<body class="sign_in_up_bg">
	<!-- Signup Start -->
	<div class="container">
		<div class="row justify-content-lg-center justify-content-md-center">
			<div class="col-lg-12">
				<div class="main_logo25" id="logo">
					<a href="/"><img src="/images/logo.svg" alt=""></a>
					<a href="/"><img class="logo-inverse" src="/images/ct_logo.svg" alt=""></a>
				</div>
			</div>
		
			<div class="col-lg-6 col-md-8">
				<div class="sign_form">
					<h2>Input new Password</h2>
					<form id="frmEdit" method="POST" action="">
						<div class="ui search focus mt-50">
							<div class="ui left icon input swdh95">
								<input class="prompt srch_explore" type="email" name="email" readonly required="" value="{{email}}" maxlength="64" placeholder="Email Address">															
								<i class="uil uil-envelope icon icon2"></i>
							</div>
						</div>

						<div class="ui search focus mt-25">
							<div class="ui left icon input swdh95">
								<input class="prompt srch_explore" type="password" id="password" name="password" required="" maxlength="64" placeholder="Password">															
								<i class="uil uil-key-skeleton-alt icon icon2"></i>
							</div>
						</div>

						<div class="ui search focus mt-25">
							<div class="ui left icon input swdh95">
								<input class="prompt srch_explore" type="password" id="passwordcheck" name="passwordcheck" required="" maxlength="64" placeholder="Confirm Password">															
								<i class="uil uil-key-skeleton-alt icon icon2"></i>
							</div>
						</div>

                        <div style="color: #ff9800; font-weight: bold; margin-top: 10px" id="message"></div>
						<button class="login-btn" type="submit" id="reset">Reset Password</button>

					</form>
					<p class="mb-0 mt-30">Go Back <a href="/account/login">Log In</a></p>
				</div>
				<div class="sign_footer">Â© 2020 <strong>Online Academay</strong>. All Rights Reserved.</div>
