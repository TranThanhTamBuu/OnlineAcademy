<script>
	
	
	
	function formsubmit(){
		var tilte = $('#lecture[title]').val();
		var chap_num = $('#chapter_number').val();
		var ext_name = getname('inputGroupFile06');
		ext_name = ext_name.substr(ext_name.lastIndexOf('.') + 1);
		if (tilte == "" || chap_num =="" || ext_name!="mp4"){
			Swal.fire({
                        icon: 'error',
                        title: 'Empty input!',
                        showConfirmButton: true,
                        timer: 2000,
                        timerProgressBar: true,
                    })
		}
		else {
			document.getElementById("form1").submit();
		}
		
	}

	function formsubmitz(chap_num){
		$('.bulldog').attr('value', chap_num);
		$('#form1').attr('enctype', '');
		document.getElementById("form1").submit();
	}
	
	
</script>

<script>
	function deletez(chap_num){
		$('.bulldog').attr('value', chap_num);
		$('#form1').attr('enctype', '');
		$('.hacker').attr('value', 'delete');
		document.getElementById("form1").submit();
	}
</script>

<script>
	function getname(idz){
		var fullPath = document.getElementById(idz).value;
		if (fullPath) {
			var startIndex = (fullPath.indexOf('\\') >= 0 ? fullPath.lastIndexOf('\\') : fullPath.lastIndexOf('/'));
			var filename = fullPath.substring(startIndex);
			if (filename.indexOf('\\') === 0 || filename.indexOf('/') === 0) {
				filename = filename.substring(1);
			}
			$("label[for=inputGroupFile06]").html(filename);
			return filename;
		}
		return "";
	}

	$("#inputGroupFile06").change(function() {
		getname('inputGroupFile06');
	});
</script>
