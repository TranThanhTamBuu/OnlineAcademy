{{/section}}
<form method="POST" action="">
	<div class="wrapper">
		<div class="sa4d25">
			<div class="container">
				<div class="row">
					{{#if check}}
						<div class="col-lg-12">
							<h2 class="st_title"><i class="uil uil-analysis"></i> Edit Course</h2>
						</div>
					{{else}}
						<div class="col-lg-12">
							<h2 class="st_title"><i class="uil uil-analysis"></i> Create New Course</h2>
						</div>
					{{/if}}
					
				</div>
				<div class="row">
					<div class="col-12">
						<div class="course_tabs_1">
							<div id="add-course-tab" class="step-app">
								<ul class="step-steps">
									<li class="active">
										<a href="/teacher/create_course">
											<span class="number"></span>
											<span class="step-name">General Information</span>
										</a>
									</li>
									<li>
										<a href="/teacher/add_pic">
											<span class="number"></span>
											<span class="step-name">View</span>
										</a>
									</li>
									<li class="">
										<a href="/teacher/add_chap">
											<span class="number"></span>
											<span class="step-name">Course Content</span>
										</a>
									</li>
									<li class="">
										<a href="/teacher/finish">
											<span class="number"></span>
											<span class="step-name">Extra Information</span>
										</a>
									</li>
								</ul>


								<div class="step-content">

									<div class="step-tab-panel step-tab-info active" id="tab_step1">
										<div class="tab-from-content">
											<div class="title-icon">
												<h3 class="title"><i class="uil uil-info-circle"></i>General Information
												</h3>
											</div>
											<div class="course__form">
												<div class="view_info10">
													<div class="row">
														<div class="col-lg-6 col-md-6">
															<div class="ui search focus mt-30 lbel25">
																<label>Course Title*</label>
																{{#if check}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																			name="name" placeholder="Insert your course title."
																			data-purpose="edit-course-title" maxlength="60"
																			id="main[title]" value="{{course.name}}">
																		<div class="badge_num">60</div>
																	</div>
																{{else}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																			placeholder="Insert your course title."
																			name="name"
																			data-purpose="edit-course-title" maxlength="60"
																			id="main[title]" value="">
																		<div class="badge_num">60</div>
																	</div>
																{{/if}}
															</div>
														</div>
														<div class="col-lg-6 col-md-6">
															<div class="ui search focus mt-30 lbel25">
																<label>Course Subtitle*</label>
																{{#if check}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																		placeholder="Insert your course Subtitle."
																			name="short_info" data-purpose="edit-course-title"
																			maxlength="60" id="sub[title]" value="{{course.short_info}}">
																		<div class="badge_num2">120</div>
																	</div>
																{{else}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																			placeholder="Insert your course Subtitle."
																			name="short_info" data-purpose="edit-course-title"
																			maxlength="60" id="sub[title]" value="">
																		<div class="badge_num2">120</div>
																	</div>
																{{/if}}
															</div>
														</div>
														<div class="col-lg-12 col-md-12">
															<div class="course_des_textarea mt-30 lbel25">
																<label>Course Description</label>
																<div class="course_des_bg">
																	<div class="textarea_dt">
																		<div class="ui form swdh339">
																			<div class="field">
																				<textarea rows="5" name="full_info"
																					id="id_part_description"
																					placeholder="Insert your course part description">{{course.full_info}}</textarea>
																			</div>
																		</div>
																	</div>
																</div>
															</div>
														</div>
														
														<div class="col-lg-4 col-md-6">
															<div class="mt-30 lbel25">
																<label>Course Category*</label>
															</div>
															<div class="ui hj145 dropdown cntry152 prompt srch_explore selection" tabindex="0">
																<i class="dropdown icon"></i>
																
																<div id="type" class="default text">Select Type</div>
																
																
																<div class="menu" tabindex="-1">
																	{{#each this.lcSpec}}
																	<div class="item" onclick="$('#temp').value">{{id}}. {{name}}</div>
																	{{/each}}
																</div>
																<input type="hidden" class="temp" id="temp" name="type" value="" onchange="show_spec()">	
															</div>
														</div>
														<div class="col-lg-4 col-md-6">
															<div class="mt-30 lbel25">
																<label>Course Subcategory*</label>
															</div>
															<div class="ui hj145 dropdown cntry152 prompt srch_explore selection" tabindex="0">
																<i class="dropdown icon"></i>
																
																<div id="category" class="default text">Select Specification</div>
																
																<div class="menu" tabindex="-1">
																	{{#each this.lcSpec}}
																		{{#each spec}}
																			<div  class="item {{../id}} all"  style="display: none;" onclick="$('#spec_id').value">{{spec_id}}. {{spec_name}}</div>
																		{{/each}}
																	{{/each}}
																	
																</div>
																<input type="hidden" class="spec_id" id="spec_id" name="spec_id" value="" >
															</div>
														</div>
													</div>
												</div>
												<div class="price_course">
													<div class="row">
														<div class="col-lg-12">
															<div class="price_title">
																<h4><i class="uil uil-dollar-sign-alt"></i>Pricing</h4>
															</div>
														</div>
														<div class="col-lg-3 col-md-4 col-sm-6">
															<div class="ui search focus lbel25">
																{{#if check}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																			name="price" data-purpose="edit-course-title"
																			placeholder="Insert price"
																			maxlength="60" id="sub[title]" value="{{course.price}}">
																		<div class="badge_num2">USD</div>
																	</div>
																{{else}}
																	<div class="ui left icon input swdh19">
																		<input class="prompt srch_explore" type="text"
																			placeholder="Insert price"
																			name="price" data-purpose="edit-course-title"
																			maxlength="60" id="sub[title]" value="">
																		<div class="badge_num2">USD</div>
																	</div>
																{{/if}}
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>



								<div class="step-footer step-tab-pager">

									<button class="btn btn-default steps_btn" type="submit" style="">Next</button>

								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
</form>


