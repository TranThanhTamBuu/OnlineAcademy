<script>

	function show_spec(){
		console.log("cac");
		var type = $('#temp').val();
		$('.all').hide();
		$('.'+parseInt(type)).show();
		$('#category').text('Select Subcategory');
	}
	
	function temp_func(id){
		console.log(id);
		$('#temp').attr('value', 'cac');
	}
	function getname(idz) {
		var fullPath = document.getElementById(idz).value;
		if (fullPath) {
			var startIndex = (fullPath.indexOf('\\') >= 0 ? fullPath.lastIndexOf('\\') : fullPath.lastIndexOf('/'));
			var filename = fullPath.substring(startIndex);
			if (filename.indexOf('\\') === 0 || filename.indexOf('/') === 0) {
				filename = filename.substring(1);
			}
			$("label[for=inputGroupFile04]").html(filename);
		}
	}
	function readURL(input) {
		if (input.files && input.files[0]) {
			var reader = new FileReader();
			reader.onload = function (e) {
				$('#img_test').attr('src', e.target.result);

			}
			getname('inputGroupFile04');

			reader.readAsDataURL(input.files[0]); // convert to base64 string
		}
	}
	$("#inputGroupFile04").change(function () {
		readURL(this);
	});
</script>
